!!$HOME/.Xdefaults

!!输入法设置
URxvt.inputMethod: xim
URxvt.preeditType: Root

!!作为loginshell
URxvt.loginShell: True

!!大小
URxvt.geometry: 80x25

!!记录行数
URxvt.saveLines: 65535

!!终端名称
URxvt.termName: rxvt

!!终端标题
URxvt.title: rxvt-unicode

URxvt.buffered: True

!!颜色设置
URxvt.depth: 32

!!Tangoesque scheme 
URxvt.background: [95]#333333
URxvt.foreground: #f2f2f2
! Black
URxvt.color0: #000000
URxvt.color8: #555753
! Red
URxvt.color1: #ff6565
URxvt.color9: #ff8d8d
! Green
URxvt.color2: #93d44f
URxvt.color10: #c8e7a8
! Yellow
URxvt.color3: #eab93d
URxvt.color11: #ffc123
! Blue
URxvt.color4: #204a87
URxvt.color12: #3465a4
! Mangenta
URxvt.color5: #ce5c00
URxvt.color13: #f57900
! Cyan 
URxvt.color6: #89b6e2
URxvt.color14: #46a4ff
! White
URxvt.color7: #cccccc
URxvt.color15: #ffffff

!!程序图标
!!URxvt.iconFile:/usr/share/icons/oxygen/48x48/apps/utilities-terminal.png
URxvt.iconFile: /usr/share/icons/mate/48x48/apps/gnome-terminal.png

!!滚动条设置
URxvt.scrollBar: False
!URxvt.scrollBar_right: True
!URxvt.scrollBar_floating: False
!URxvt.scrollStyle: plain
!URxvt.thickness: 5

!!滚屏设置
URxvt.mouseWheelScrollPage: True
URxvt.scrollTtyOutput: False
URxvt.scrollWithBuffer: True
URxvt.scrollTtyKeypress: True

!!光标设置
URxvt.cursorBlink: True
URxvt.cursorUnderline: False
URxvt.pointerBlank: True

!!边框
URxvt.borderLess: False

!!字体设置
Xft.dpi: 96
URxvt.font: xft:Dejavu Sans Mono:size=12:style=Regular:antialias=True,xft:文泉驿等宽微米黑:size=12:style=Regular:antialias=True
URxvt.boldfont: xft:Dejavu Sans Mono:size=12:style=Bold:antialias=True,xft:文泉驿等宽微米黑:size=12:style=Bold:antialias=True

!!Perl扩展
URxvt.perl-lib: ./.myconf/urxvt/
!!URxvt.perl-ext-common: default,matcher,clipboard,keyboard-select,url-select
URxvt.perl-ext-common: default,matcher,clipboard
!!matcher
URxvt.urlLauncher: chromium
URxvt.underlineURLs: True
URxvt.matcher.button: 1
!!clipboard
!需安装xclip
URxvt.copyCommand:  xclip -i -selection clipboard
URxvt.pasteCommand: xclip -o -selection clipboard
URxvt.keysym.Mod4-c:   perl:clipboard:copy
URxvt.keysym.Mod4-v:   perl:clipboard:paste
URxvt.keysym.Mod4-C-v: perl:clipboard:paste_escaped
!!url-select
!!URxvt.keysym.Mod4-C-u: perl:url-select:select_next
!!keyboard-select
!URxvt.keysym.Mod4-Escape: perl:keyboard-select:activate
!URxvt.keysym.Mod4-s: perl:keyboard-select:search
